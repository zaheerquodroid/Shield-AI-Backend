          {"type": "listItem", "content": [{"type": "paragraph", "content": [{"type": "text", "text": "HSTS disabled or timeout too short"}]}]},
          {"type": "listItem", "content": [{"type": "paragraph", "content": [{"type": "text", "text": "SSL redirect disabled"}]}]},
          {"type": "listItem", "content": [{"type": "paragraph", "content": [{"type": "text", "text": "Content-Type nosniff disabled"}]}]},
          {"type": "listItem", "content": [{"type": "paragraph", "content": [{"type": "text", "text": "X-Frame-Options set to SAMEORIGIN"}]}]},
          {"type": "listItem", "content": [{"type": "paragraph", "content": [{"type": "text", "text": "Session cookies not marked as secure"}]}]},
          {"type": "listItem", "content": [{"type": "paragraph", "content": [{"type": "text", "text": "CSRF cookies not marked as secure"}]}]},
          {"type": "listItem", "content": [{"type": "paragraph", "content": [{"type": "text", "text": "Missing referrer policy"}]}]}
        ]
